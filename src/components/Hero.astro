import "@splidejs/splide/css"
import { SplideExtension, SplideSlide } from 'astro-splide'
import type { Options } from '@splidejs/splide'
const options: Options = {
  type   : 'loop',
  drag   : 'free',
  focus  : 'center',
  gap: '1rem',
  arrows: false,
  pagination: true,
  perPage: 8,
  autoScroll: {
    speed: 0.4,
  },
  breakpoints: {
    920: {
			perPage: 4,
		},
		640: {
			perPage: 2,
		},
  }
}

interface Props {
  /**
   * The title text to display
   * @default "Contact me"
   */
  title?: string
  /**
   * The URL the button should link to
   * @default "https://github.com/incluud/accessible-astro-starter"
   */
  link?: string
  /**
   * The text to display on the button
   * @default "Get Started"
   */
  linkText?: string
}

const {
  title = 'Opowiedz mi o Twoim problemie, to nic nie kosztuje',
  link = 'tel:+48508865836',
  linkText = 'Zadzwo≈Ñ teraz',
} = Astro.props
---

<section class="hero w-full p-[4rem] max-w-full">
<div class="relative isolate">
  <div aria-hidden="true" class="absolute inset-x-0 -top-3 -z-10 transform-gpu overflow-hidden px-36 blur-3xl">
    <div style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)" class="mx-auto aspect-1155/678 w-288.75 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-40">
    </div>
  </div>
  <div class="container">
    <div class="flex flex-col items-center gap-4 lg:grid-cols-2">
        <h1 class="text-center text-6xl lg:text-8xl">
          <slot><span>Wszechstronny</span><br> consulting biznesowy</slot>
        </h1>
          <div class="flex flex-row items-center gap-4 flex-wrap justify-center m-4">
            <Badge type="default" size="lg">brand</Badge>
            <Badge type="default" size="lg">web</Badge>
            <Badge type="default" size="lg">design</Badge>
            <Badge type="default" size="lg">photo</Badge>
            <Badge type="default" size="lg">video</Badge>
            <Badge type="default" size="lg">marketing</Badge>
          </div>
  </div>
</div>
</section>
<div class="w-full">
  <SplideExtension options={options}>
    <SplideSlide><Image src={SlideImage1} alt="A description of my image." height={520} /></SplideSlide>
    <SplideSlide><Image src={SlideImage2} alt="A description of my image." height={520} /></SplideSlide>
    <SplideSlide><Image src={SlideImage3} alt="A description of my image." height={520} /></SplideSlide>
